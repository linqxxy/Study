    <sql id="deleteItemsByIdsSQL">
        <foreach collection="array" item="everyid" open="id in (" close=")" separator=",">
            #{everyid}
        </foreach>
    </sql>

    <delete id="deleteItemsByIds" parameterType="java.lang.Integer">
        delete from items
        <where>
            <include refid="deleteItemsByIdsSQL"/>
        </where>
    </delete>
</mapper>